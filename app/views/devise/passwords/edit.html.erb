<section class="form-wrapper">

  <%# Product Logo & Name %>
  <%= render "shared/logo" %>

  <%# Form %>
  <div class="form-layout">

    <%# Heading %>
    <h1 class="form-header">Change password</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <div class="mt-4 space-y-4 lg:mt-5 md:space-y-5">

      <%# Validation Errors %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <%# Password %>
      <div class="field">
        <%= f.label :password, "New password", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", class: "form-input" %>
        <% if @minimum_password_length %>
          <em class="mt-1 text-sm font-thin text-slate-700 dark:text-slate-300">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <%# Password Confirmation %>
      <div class="field">
        <%= f.label :password_confirmation,  "Confirm new password", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class:"form-input" %>
      </div>

      <%# Submit  %>
      <div class="actions">
        <%= f.submit "Change my password", data: {turbo_submits_with: "Changing..."}, class: "form-submit" %>
      </div>
    <% end %>
  </div>
</section>