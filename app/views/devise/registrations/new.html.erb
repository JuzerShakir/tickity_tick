<section class="form-wrapper">

    <%# Product Logo & Name %>
    <%= render "shared/logo" %>

    <%# Form %>
    <div class="form-layout">

        <%# Heading %>
        <h1 class="form-header">Create an account</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="space-y-4 md:space-y-6">

            <%#   Validation Error Messages %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <%# Email field %>
            <div class="field">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autocomplete: "email", placeholder:"name@company.com", class: "form-input" %>
            </div>

            <%# Password %>
            <div class="field">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", class: "form-input" %>
              <% if @minimum_password_length %>
                <em class="mt-1 text-sm font-thin text-primary-800 dark:text-primary-100">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </div>

            <%# Password Confirmation %>
            <div class="field">
              <%= f.label :password_confirmation, class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: "form-input" %>
            </div>

            <%# Submit %>
            <div class="actions">
              <%= f.submit "Create an account", data: { turbo_submits_with: "Creating..."}, class: "form-submit" %>
            </div>
          </div>
        <% end %>

        <hr class="divider">

        <%# Other resources %>
        <%= render "devise/shared/links" %>
      </div>
</section>