<% if resource.errors.any? %>
  <div id="error_explanation" data-turbo-cache="false" class="flex p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-100 dark:bg-red-300 border-2 border-red-800" role="alert">

    <span class="flex-shrink-0 inline me-3">
      <%= render "shared/svg/info" %>
    </span>

    <div>
      <h2 class="font-semibold text-base">
        <%= I18n.t("errors.messages.not_saved",
          count: resource.errors.count,
          resource: resource.class.model_name.human.downcase)
         %>
      </h2>
      <ul class="mt-1.5 list-disc list-inside">
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>