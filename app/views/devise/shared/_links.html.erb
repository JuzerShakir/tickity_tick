<div class="grid gap-3">
  <%- if controller_name != 'sessions' && controller_name != 'passwords' %>
    <p class="link-label">Already have an account?
      <%= link_to "Login here", new_session_path(resource_name), class: "link" %>
    </p>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="link-label">Don't have an account yet?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "link" %>
    </p>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' && controller_name != 'confirmations' %>
    <p class="link-label">Forgot password?
      <%= link_to "Reset Now", new_password_path(resource_name), class: "link" %>
    </p>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' && controller_name != 'passwords' %>
    <p class="link-label">Didn't receive confirmation instructions?
      <%= link_to "Recieve Now", new_confirmation_path(resource_name) , class: "link" %>
    </p>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
    <% end %>
  <% end %>
</div>