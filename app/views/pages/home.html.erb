            <div class="flex items-center divide-x-2 divide-gray-500 dark:divide-gray-700">
                <div class="pr-3 font-bold text-lg tracking-wider text-primary-900 dark:text-primary-50">Murtaza Basrai</div>
                <div class="pl-3 text-base font-light text-secondary-800 dark:text-secondary-50">CEO at Mozrai</div>
            </div>
        </figcaption>
      </div>
    </figure>
  </div>

  <%# CTA %>
  <div class="flex flex-col sm:flex-row sm:justify-center">
    <%= link_to  new_user_session_path, class: "inline-flex items-center justify-center px-5 py-3 text-base md:text-lg xl:text-xl font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-900" do %>
