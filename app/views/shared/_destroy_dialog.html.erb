<dialog data-dialog-target="deleteModal" class="dark:bg-gray-800 bg-primary-100 rounded-lg backdrop:backdrop-blur-sm">
  <div class="p-4 text-center  rounded-lg shadow  sm:p-5">
    <!-- Close Button-->
    <button data-action="click->dialog#close" class="text-primary-400 absolute top-2.5 right-2.5 bg-transparent hover:bg-primary-200 hover:text-primary-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-primary-600 dark:hover:text-primary-200" data-modal-toggle="deleteModal">
        <svg  aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        <span class="sr-only">Close modal</span>
    </button>

    <%# Delete Icon %>
    <svg class="text-secondary-600 dark:text-secondary-500 w-11 h-11 mb-3.5 mx-auto" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>

    <%# Confirmation Message %>
    <p class="mb-4 text-gray-500 dark:text-gray-300"><%= message %></p>

    <%# Action %>
    <div class="flex justify-center items-center space-x-4">
      <%#  Cancel Button %>
      <form>
        <button formmethod="dialog" class="py-2 px-3 text-sm font-medium rounded-lg border focus:ring-4 focus:outline-none  focus:z-10 focus:ring-primary-300 text-primary-500 bg-white border-primary-200 hover:bg-secondary-100 hover:text-primary-900 dark:bg-gray-700 dark:text-primary-100 dark:border-secondary-500 dark:hover:text-primary-50 dark:hover:bg-gray-600 dark:focus:ring-gray-600">
            No, cancel
        </button>
      </form>

      <%# Delete Account  Button %>
      <%= button_to "Yes, I'm sure!",
        destroy_path,
        method: :delete,
        data: {"turbo_frame": "_top", "turbo_submits_with": "Deleting..."},
        class: "py-2 px-3 text-sm font-medium text-center text-white bg-red-500 dark:bg-red-600 rounded-lg hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300"
      %>
    </div>
  </div>
</dialog>