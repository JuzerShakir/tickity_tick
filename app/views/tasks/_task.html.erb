<turbo-frame id="<%= dom_id task %>"  class="flex justify-between gap-5">
  <%= form_with(model: task, class:"flex items-center text-sm md:text-lg") do |form| %>
    <%= form.check_box :completed,
      class: "peer/tick mr-2 form-checkbox",
      data: {
        id: task.id,
        action: "tasks#toggle"
      }
      %>

    <span class="max-w-sm leading-6 text-secondary-900 dark:text-secondary-200 peer-checked/tick:line-through peer-checked/tick:text-secondary-400/55 peer-checked/tick:italic">
      <%= task.description %>
    </span>
  <% end %>

  <%# Actions %>
  <div class="flex gap-5">
    <%# Edit Task %>
    <%= link_to edit_task_path(task), id: "#{task.id}-edit", class: ("invisible" if task.completed) do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 stroke-secondary-500 hover:stroke-secondary-700 dark:stroke-secondary-300 dark:hover:stroke-secondary-600">
        <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
      </svg>
    <% end %>

    <%# Delete Task %>
    <div data-controller="dialog">
      <button data-action= "click->dialog#open">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 stroke-red-500 hover:stroke-red-700">
          <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
        </svg>
      </button>

      <%= render "/shared/destroy_dialog", destroy_path: task_path(task), message: "Are you sure you want to delete this task?" %>
    </div>
  </div>
</turbo-frame>
