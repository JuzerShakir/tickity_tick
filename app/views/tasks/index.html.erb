<%# Flash messages %>
<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 text-green-500 font-medium rounded-lg inline-block text-sm md:text-base" id="notice">
    <%= notice %>
  </p>
<% end %>

<%# Heading %>
<h1 class="font-bold text-2xl text-center">Task Manager</h1>

<%# Form %>
<section>
  <%= render "form", task: @task %>
</section>

<%# Tasks %>
<% if @tasks.present? %>
  <section id="tasks" class= "grid justify-items-center gap-5 w-screen mb-10">
    <h1 class="font-bold text-lg">Tasks</h1>

    <div data-controller="tasks" class="grid gap-4 w-3/4">
      <%= render @tasks %>
    </div>
  </section>
<% end %>