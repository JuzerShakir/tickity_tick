<%# Heading %>
<h1 class="font-bold text-2xl text-center text-primary-950 dark:text-primary-50">Task Manager</h1>

<%# Form %>
<main class="grid justify-center gap-8 md:gap-14 mt-16 md:mt-28">
  <section>
    <%= render "form", task: @task %>
  </section>

  <%# divider %>
  <hr class="divider">

  <%# Tasks %>
  <% if @tasks.present? %>
    <section id="tasks" class= "grid justify-items-center gap-5 mb-10">
      <h2 class="font-bold text-lg text-primary-950 dark:text-primary-50">Tasks</h2>

      <div data-controller="tasks" class="grid gap-4">
        <%= render @tasks %>
      </div>
    </section>
  <% end %>
</main>
